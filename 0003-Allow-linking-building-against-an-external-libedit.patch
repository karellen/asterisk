diff --git a/makeopts.in b/makeopts.in
index 5e9ef8c..02b3b51 100644
--- a/makeopts.in
+++ b/makeopts.in
@@ -305,3 +305,7 @@ TINFO_DIR=@TINFO_DIR@
 # if poll is not present, let the makefile know.
